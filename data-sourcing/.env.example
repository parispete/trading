# Trading Data Sourcing Configuration
# Copy this file to .env and fill in your values

# ===================
# API Keys
# ===================

# Tiingo API Key (get free key at https://www.tiingo.com)
TIINGO_API_KEY=your_tiingo_api_key_here

# ===================
# Database Configuration
# ===================

# Path to DuckDB database file
DATABASE_PATH=./data/trading_data.duckdb

# ===================
# Sync Settings
# ===================

# Maximum API calls per day (Tiingo free tier: 1000)
MAX_DAILY_API_CALLS=900

# Delay between API requests in milliseconds
API_REQUEST_DELAY_MS=50

# Number of retry attempts for failed requests
MAX_RETRIES=3

# ===================
# Logging
# ===================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
